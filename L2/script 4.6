#! /bin/bash
echo D.CA 2016
if [[ "$#" == 2 ]]; 
then
	if [ -d "$1" ]
	then
		echo "Est un dossier" 
		if [ -d "$2" ]
		then
			echo "Est un dossier" 
		else
			mkdir "$2"
		fi
		for f in "$1"/*
		do
			echo fichier "$f"
			echo Effacer Copier Deplacer Quiter [e,c,d,q]
			read ans
			if [ "$ans" == "e" ]
			then
				rm "$f" -f
			fi
			if [ "$ans" == "c" ]
			then
				cp "$f" "$2"
			fi
			if [ "$ans" == "d" ]
			then
				mv "$f" "$2"
			fi
			if [ "$ans" == "q" ]
			then
				exit
			fi
		done
	else
		echo "N'est pas un dossier"
	fi
else
	echo "erreur d'argument"
fi
